<div class="flash">
<% if @finduser %>
<%= flash[:taken] %>
<% elsif !Helpers.validate_user(params[:username]) %>
<%= flash[:username] %>
<% elsif !Helpers.validate_length(params[:password]) %>
<%= flash[:password] %>
<% end %>
</div>
<h1>Sign Up</h1>
<form action="/signup" method="POST">
<label for='username'>Username: </label>
<input type='text' name='username' required><br>
<label for='password'>Password: </label>
<input type='password' name='password' required><br><br>
<% @studios.each do |studio| %>
    <input id="signup-radio" type="radio" name="studio" value="<%= studio.name %>" required> <%= studio.name %>
<% end %>
<br>
<br>
<input type='submit' value="Sign Up"><br><br>
If your studio is not listed, click <a href="/signup2">here</a>

<br> 
</form>